@model Ferresys.Models.EmpleadoModel

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>Gestión de Empleados</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            background: #0F2027;
            /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #2C5364, #203A43, #0F2027);
            /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #2C5364, #203A43, #0F2027);
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */


            margin-bottom: 60px;
        }

        .btn-custom-orange {
            background-color: rgb(38, 35, 35);
            color: white;
            border: none;
            float: right;
            margin: 2px;
        }

        h1 {
            color: white;
            text-align: center;
            margin-bottom: 30px;
        }

        label {
            color: white;
        }

        form {
            background-color: rgba(255, 255, 255, 0.2);
            padding: 20px;
            border-radius: 10px;
            margin: 0 auto;
            /* Centra horizontalmente el formulario */
            max-width: 600px;
            /* Establece el ancho máximo del formulario */
        }

        .form-group {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Agregar Empleado</h1>
                <form asp-action="AgregarEmpleado" method="post">
                    <!-- Campos del formulario -->
                    <!-- ... (otros campos) ... -->

                    <!-- Sexo -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="IdSexo">Sexo:</label>
                        <div class="col-sm-9">
                            <select asp-for="IdSexo" class="form-control">
                                <option value="">Seleccionar</option>
                                @foreach (var sexo in ViewBag.Sexos)
                                {
                                    <option value="@sexo.Id">@sexo.Nombre</option>
                                }
                            </select>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.IdSexo)</span>
                        </div>
                    </div>

                    <!-- Razón Social -->
                    <!-- ... (otros campos de selección) ... -->

                    <!-- Tipo de Empleado -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="IdTipoEmpleado">Tipo de Empleado:</label>
                        <div class="col-sm-9">
                            <select asp-for="IdTipoEmpleado" class="form-control">
                                <option value="">Seleccionar</option>
                                @foreach (var tipoEmpleado in ViewBag.TipoEmpleados)
                                {
                                    <option value="@tipoEmpleado.Id">@tipoEmpleado.Nombre</option>
                                }
                            </select>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.IdTipoEmpleado)</span>
                        </div>
                    </div>

                    <!-- Región -->
                    <!-- ... (otros campos de selección) ... -->

                    <!-- Comuna -->
                    <!-- ... (otros campos de selección) ... -->

                    <div class="form-group">
                        <button class="btn btn-custom-orange" id="btnCrearEmpleado">Crear Empleado</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>
