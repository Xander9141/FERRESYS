@model Ferresys.Models.ProveedorModel

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["MensajeExito"]
    </div>
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>Ingresar Proveedor</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <style>
        body {
            background: #0F2027;
            /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #2C5364, #203A43, #0F2027);
            /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #2C5364, #203A43, #0F2027);
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

        }

        .btn-custom-orange {
            background-color: rgb(38, 35, 35);
            color: white;
            border: none;
            float: right;
            margin: 2px;
        }

        h1 {
            color: white;
            text-align: center;
            margin-bottom: 30px;
        }

        label {
            color: white;
        }

        form {
            background-color: rgba(255, 255, 255, 0.2);
            padding: 20px;
            border-radius: 10px;
            margin: 0 auto;
            /* Centra horizontalmente el formulario */
            max-width: 600px;
            /* Establece el ancho máximo del formulario */
        }

        .form-group {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Ingresar Proveedor</h1>
                <form asp-controller="Home" asp-action="IngresarProveedor" method="post">
                    <!-- Rut -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="RutProveedor">Rut:</label>
                        <div class="col-sm-9">
                            <input asp-for="RutProveedor" class="form-control" required>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.RutProveedor)</span>
                        </div>
                    </div>

                    <!-- Nombre -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="NombreProveedor">Nombre:</label>
                        <div class="col-sm-9">
                            <input asp-for="NombreProveedor" class="form-control" required>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.NombreProveedor)</span>
                        </div>
                    </div>

                    <!-- Apellido -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="ApellidoProveedor">Apellido:</label>
                        <div class="col-sm-9">
                            <input asp-for="ApellidoProveedor" class="form-control" required>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.ApellidoProveedor)</span>
                        </div>
                    </div>

                    <!-- Dirección Central -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="DireccionCentralProveedor">Dirección Central:</label>
                        <div class="col-sm-9">
                            <input asp-for="DireccionCentralProveedor" class="form-control" required>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.DireccionCentralProveedor)</span>
                        </div>
                    </div>

                    <!-- Dirección Secundaria -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="DireccionSecundariaProveedor">Dirección Secundaria:</label>
                        <div class="col-sm-9">
                            <input asp-for="DireccionSecundariaProveedor" class="form-control" required>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.DireccionSecundariaProveedor)</span>
                        </div>
                    </div>

                    <!-- Teléfono -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="TelefonoProveedor">Teléfono:</label>
                        <div class="col-sm-9">
                            <input asp-for="TelefonoProveedor" class="form-control" required>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.TelefonoProveedor)</span>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="EmailProveedor">Email:</label>
                        <div class="col-sm-9">
                            <input asp-for="EmailProveedor" class="form-control" required>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.EmailProveedor)</span>
                        </div>
                    </div>

                    <!-- Fecha Creación -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Fecha Creación:</label>
                        <div class="col-sm-9">
                            <input asp-for="FechaCreacion" class="form-control" readonly>
                        </div>
                    </div>

                    <!-- Fecha Actualización -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Fecha Actualización:</label>
                        <div class="col-sm-9">
                            <input asp-for="FechaActualizacion" class="form-control" readonly>
                        </div>
                    </div>

                    <!-- Razon Social -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="RazonSocialIdRazonSocial">Razón Social:</label>
                        <div class="col-sm-9">
                            <select asp-for="RazonSocialIdRazonSocial" class="form-control">
                                <option value="">Seleccionar</option>
                                <option value="1">Persona Natural</option>
                                <option value="2">Persona Jurídica</option>
                            </select>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.RazonSocialIdRazonSocial)</span>
                        </div>
                    </div>

                    <!-- Región -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="RegionesIdRegion">Región:</label>
                        <div class="col-sm-9">
                            <select asp-for="RegionesIdRegion" class="form-control">
                                <option value="">Seleccionar</option>
                                <option value="1">Región de Arica y Parinacota</option>
                                <!-- Agrega opciones según tus datos -->
                            </select>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.RegionesIdRegion)</span>
                        </div>
                    </div>

                    <!-- Ciudad -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="CiudadesIdCiudad">Ciudad:</label>
                        <div class="col-sm-9">
                            <select asp-for="CiudadesIdCiudad" class="form-control">
                                <option value="">Seleccionar</option>
                                <!-- Agrega opciones según tus datos -->
                            </select>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.CiudadesIdCiudad)</span>
                        </div>
                    </div>

                    <!-- Comuna -->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="ComunasIdComuna">Comuna:</label>
                        <div class="col-sm-9">
                            <select asp-for="ComunasIdComuna" class="form-control">
                                <option value="">Seleccionar</option>
                                <!-- Agrega opciones según tus datos -->
                            </select>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.ComunasIdComuna)</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-custom-orange" id="btnIngresarProveedor">Ingresar Proveedor</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>

