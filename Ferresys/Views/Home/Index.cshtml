@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar sesión</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            background: #0F2027;
            /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #2C5364, #203A43, #0F2027);
            /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #2C5364, #203A43, #0F2027);
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

        }

        .btn-custom-orange {
            background-color: #2C5364;
            color: white;
            border: none;
        }

        .card {
            background-color: rgb(41, 37, 37);
            color: white;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <div class="container" style="margin-top: 100px;">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <img src="./images/ferresys-logo.jpg" alt="Logo" style="max-width: 200px;">
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="IniciarSesion" onsubmit="return validateForm()">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email">Correo Electrónico: </label>
                                <input asp-for="Email" class="form-control" type="email"
                                    placeholder="Ingrese su correo electrónico" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Contraseña:</label>
                                <input asp-for="Password" class="form-control" type="password"
                                    placeholder="Ingrese su contraseña" required>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <a asp-area="" asp-controller="Home" asp-action="IniciarSesion"
                                class="btn btn-custom-orange btn-block">Iniciar sesion</a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

</html>
